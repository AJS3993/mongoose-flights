
<%- include('../partials/header') %>

<h2>Flight Details</h2>


<section id="show-page">
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departure %></div>
</section>



<section>
  <h2>Tickets</h2>
  <table>
      <thead>
          <th>
              Seat
          </th>
          <th>
              Price
          </th>
      </thead>
      <% ticket.forEach(function(ticket) { %>
          <tr>
              <td value=ticket._id><%=ticket.seat %></td>
              <td value=ticket._id><%= ticket.price %></td>
          </tr>
      <% }) %>
  </table>
</section>




<br><br><a href="/flights/<%= flight._id %>/tickets/new">add ticket</a>


      <br><br><h2>Destinations</h2>
      <form id="add-destination-form" method="POST"
        action="/flights/<%= flight._id %>/destinations">
        
        <label>Arrival:
        <input type="date" name="arrival">
        </label>

        <label>Airport:
        <select name="airport">
          <option value="AUS">AUS</option>
          <option value="DAL">DAL</option>
          <option value="LAX">LAX</option>
          <option value="SEA">SEA</option>
        </select>
        </label>
        <input type="submit" value="Add Flight">
      </form>

     
      <table id='list'>
        <thead>
            <th>Airport</th>
            <th>Arrival</th>
        </thead>
        <% flight.destination.forEach(function(d){ %>
          <tbody>
          <tr>
                <td><%= d.airport %></td>
                <td><%= d.arrival %></td>
            </tr>
            </tbody>
        <% }) %>
          </table>

      
  <%- include('../partials/footer') %>
  